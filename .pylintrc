[MAIN]
load-plugins = pylint.extensions.docparams
jobs = 0
source-roots = src,stock_data_fsm,stock_data_fsm_openai

[MESSAGES CONTROL]
disable = missing-docstring,invalid-name,too-few-public-methods,
          too-many-arguments,too-many-locals,too-many-branches,
          line-too-long,import-error,no-name-in-module
enable = useless-suppression

[FORMAT]
max-line-length = 100
single-line-if-stmt = no

[DESIGN]
max-args = 7
max-locals = 15
max-returns = 6
max-branches = 15
max-statements = 50

[BASIC]
good-names = i,j,k,ex,Run,_,id,db,ai,ui,os,df,dt,fs,app

[IMPORTS]
known-first-party = src,stock_data_fsm,stock_data_fsm_openai
known-third-party = gradio,pydantic,rich,fastapi,openai,agents,uvicorn

[SIMILARITIES]
min-similarity-lines = 4
ignore-comments = yes
ignore-docstrings = yes
ignore-imports = no

[VARIABLES]
init-import = no
dummy-variables-rgx = _+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[CLASSES]
defining-attr-methods = __init__,__new__,setUp,__post_init__

[EXCEPTIONS]
overgeneral-exceptions = Exception