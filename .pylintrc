[MAIN]
load-plugins = pylint.extensions.docparams
jobs = 0
source-roots = src,tests
# Updated for new FastAPI + Pydantic AI architecture
py-version = 3.10

[MESSAGES CONTROL]
disable = missing-docstring,invalid-name,too-few-public-methods,
          too-many-arguments,too-many-locals,too-many-branches,
          line-too-long,import-error,no-name-in-module,
          too-many-lines,too-many-instance-attributes,broad-exception-caught,
          global-statement,global-variable-not-assigned,useless-suppression,
          logging-fstring-interpolation,f-string-without-interpolation
enable = useless-suppression

[FORMAT]
max-line-length = 100
single-line-if-stmt = no

[DESIGN]
max-args = 7
max-locals = 15
max-returns = 6
max-branches = 15
max-statements = 50
max-public-methods = 20
# Modern default: increased from 10 to 20 for better prototyping flexibility

[BASIC]
good-names = i,j,k,ex,Run,_,id,db,ai,ui,os,df,dt,fs,app,uv,mcp,ctx,api

[IMPORTS]
# known-first-party and known-third-party removed as they are not recognized in this Pylint version
# These options may be available in specific Pylint plugins

[SIMILARITIES]
min-similarity-lines = 4
ignore-comments = yes
ignore-docstrings = yes
ignore-imports = no

[VARIABLES]
init-import = no
dummy-variables-rgx = _+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[CLASSES]
defining-attr-methods = __init__,__new__,setUp,__post_init__

[EXCEPTIONS]
overgeneral-exceptions = builtins.Exception

